# GitHub App Configuration
# Create a GitHub App at: https://github.com/settings/apps/new

# GitHub App Credentials
GITHUB_APP_ID=your_app_id_here
GITHUB_CLIENT_ID=your_client_id_here
GITHUB_CLIENT_SECRET=your_client_secret_here
# Path to private key .pem file or the key contents
GITHUB_PRIVATE_KEY_PATH=./private-key.pem
# Or use GITHUB_PRIVATE_KEY with the actual key content (be careful with newlines)
# GITHUB_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"

# OAuth Configuration
GITHUB_REDIRECT_URI=http://localhost:3007/api/auth/github/callback

# For production, update the redirect URI to your production URL:
# GITHUB_REDIRECT_URI=https://yourdomain.com/api/auth/github/callback

# GitHub Webhook Secret (generate with: openssl rand -hex 32)
GITHUB_WEBHOOK_SECRET=9F4E68BC647E09845980BCAE142598FDEFB3A93683892702C0E80C62FFEDE1D0

# Next.js
NEXTAUTH_URL=http://localhost:3007
NEXTAUTH_SECRET=your_nextauth_secret_here

# Database (when ready)
DATABASE_URL=your_database_url_here